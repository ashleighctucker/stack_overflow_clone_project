extends layout

include utils

block content
  div(class="errors-container")
  form( class="sign-up-form")
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Full Name', 'fullName', fullName)
    +field('Email Address', 'emailAddress', emailAddress, 'email')
    +field('User Name', 'userName', userName)
    +field('Password', 'password', password, 'password')
    +field('Confirm Password', 'confirmPassword', confirmPassword, 'password')
    div
      button(type='submit') Sign Up
      a(href='/') Cancel
  script(type='module' src='javascripts/sign-up.js')
