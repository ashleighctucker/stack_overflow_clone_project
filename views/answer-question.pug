extends layout

include utils

block content
  section()
    div(class="ask-question-container")
      div(class="ask-question-form")
        form(action='/questions' method='POST' class="ask-question")
          +validationErrorSummary(errors)
          input(type='hidden' name='_csrf' value=csrfToken )
          h1(class="form-title")= title
          h3(id='answer-question-question')= question.question
          input(type="text" name="title" class="question-title-input"  placeholder="Answer title")
          textarea(id="ask-question-field" name="question" placeholder="Answer question...")
          input(type='hidden' name='userId')
          button(id="question-ask-button") Submit Answer
          
