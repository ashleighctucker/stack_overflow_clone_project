extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  link(rel="stylesheet" href="/stylesheets/navBar.css")
  link(rel="stylesheet" href="./stylesheets/reset.css")


  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)



block content
  section(id="main-content-container")
    div(id="main-content")
      div(id="side-bar")
        li(class="side-bar-li") Home
        li(class="side-bar-li") Messages
        li(class="side-bar-li") Questions
        li(class="side-bar-li") Users
        li(class="side-bar-li") Tags
      div(id="questions-section")
        ul(id="questions-header")
          li: h2(class="questions-title") Top Questions
          li: button(type="submit" class="ask-question-button"): a(href='/') Ask a Question

        
        div(id="questions-container")
          ul(class="question-data")
            li(class="question-answers-number") 1
            li(class="question-answer-title") answers 
          ul(class="question-section")
            li(class="question-link"): a(href="/") What does it mean if my monstera is dripping water from the tips of its leaves?   
            li(class="question-categories")
              span: a(href="/") category
              span: a(href="/") category
              span: a(href="/") category
      div(id="empty-right-bar")
      
