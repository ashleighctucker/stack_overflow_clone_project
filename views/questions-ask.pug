extends layout

append head
  link(rel="stylesheet" href="/stylesheets/navBar.css")

block content
  div(id="big-container")
    div(id='ask-question-container')
      h3 Ask a public question:
      h4 Title
      p Be specific and start your question with "What", "How", "Why", etc.
      form(action=`/question/${question.id}/question/add` method='post')
      input(type="text" class="ask-question")
    dix(id='answer-container')
      h3 Your Answer:
      textarea(name='answer' class='answer-textarea')
      button(type='submit' class='cancel-button') Cancel
      button(type='submit' class='answer-button') Post Your Answer
