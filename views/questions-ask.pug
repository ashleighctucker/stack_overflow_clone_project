extends layout

block content
  section()  
    div(id="ask-question-container")
      div(id="ask-question-form") 
        form(action='/questions' method='POST' class="ask-question")
          input(type='hidden' name='_csrf' value=csrfToken )
          h1(id="form-title") Ask a question
          input(type="text" name="title" class="question-title-input" placeholder="Question title")
          textarea(id="ask-question-field" placeholder="Ask a question...")
          button(id="question-ask-button") Submit 
