extends layout
append head 
  link(rel="stylesheet" href="/stylesheets/navBar.css")
  link(rel="stylesheet" href="/stylesheets/reset.css")
  link(rel="stylesheet" href="/stylesheets/index.css")
  link(rel="stylesheet" href="/stylesheets/login.css")
  link(rel="stylesheet" href="/stylesheets/sign-up.css")
 

include utils

block content

  section(id="sign-up-form-container")
    div(id="sign-up-form")
      +validationErrorSummary(errors)
      form(action='/users' method='POST' class="form-sign-up")
        div(class="inputs-container")
          input(type='hidden' name='_csrf' value=csrfToken)
          +field('Full Name', 'fullName', user.fullName)
          +field('Email Address', 'emailAddress', user.emailAddress, 'email')
          +field('User Name', 'userName', user.userName)
          +field('Password', 'password', user.password, 'password')
          +field('Confirm Password', 'confirmPassword', user.confirmPassword, 'password')
          div
            button(type='submit' class="login-form-button") Sign Up
          div(class="dont-have-account") 
            span Already have an account?
            span: a(href="/login") Log in
